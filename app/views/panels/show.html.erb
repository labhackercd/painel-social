<% content_for :title do %>Painel Social - <%= @panel.title %><% end %>

<div class="gridster painel-social">
  <ul>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="causabrasil" data-view="Bubbles" data-title="Temas mais discutidos nas redes sociais" data-moreinfo="Dados obtidos pelo Causa Brasil"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
    <div data-id="<%= @panel.slug %>_twitter_mentions" data-view="Comments" style="background-color:#ff9618" data-title="Twitter"></div>
      <i class="fa fa-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="<%= @panel.slug %>_twitter_wordcloud"  data-title="Twitter" data-view="Wordcloud"></div>
      <i class="fa fa-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="noticiasagenciacamara" data-view="Newslist" data-unordered="true" data-title="Mais lidas da Agência Câmara" data-moreinfo="Levantamento dos últimos 3 dias"></div>
    </li>
  </ul>
</div>
